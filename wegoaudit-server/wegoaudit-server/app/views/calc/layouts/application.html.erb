<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Retrocalc</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag    'elevate_pdf', media: 'all' %>
    <%= stylesheet_link_tag    'nei_pdf', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
<body>

  <header class="header">
    <div class="container">
      <a href="/" class="logo">RetroCalc</a>
      <nav class="global-menu">
        <%= render 'calc/layouts/header' %>
      </nav>
    </div>
  </header>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <section class="titlebar">
    <div class="container">
      <%= yield(:titlebar) if content_for?(:titlebar) %>
      <h1 class="titlebar__title"><%= page_title %></h1>
      <%= yield(:title_links) if content_for?(:title_links) %>
      <%= yield(:crumbs) if content_for?(:crumbs) %>
    </div>
  </section>

  <section class="content">
    <div class="container">

      <%= render 'calc/layouts/messages' %>

      <%= yield %>

    </div>
  </section>

  <footer class="footer">
    <div class="container">
    </div>
  </footer>

</body>
</html>
