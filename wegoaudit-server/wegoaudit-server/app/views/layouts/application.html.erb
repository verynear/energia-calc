<!DOCTYPE html>
<html class="no-js">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= yield(:page_title) + ' | ' if content_for?(:page_title) %>WegoAudit</title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "WegoAudit" %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header class="header">
      <div class="container">
        <%= link_to image_tag('logo-white.svg'), root_path %>
        <nav class="global-menu">
          <%= link_to 'Logout', signout_path %>
        </nav>
      </div>
    </header>

    <%= render 'layouts/messages' %>

    <section class="titlebar">
      <div class="container">
        <%= yield(:titlebar) if content_for?(:titlebar) %>
        <%- if content_for?(:page_title) %>
          <h1 class="titlebar__title"><%= yield(:page_title) %></h1>
        <%- end %>
        <%= yield(:title_links) if content_for?(:title_links) %>
        <%= yield(:crumbs) if content_for?(:crumbs) %>
      </div>
    </section>

    <section class="content">
      <div class="container">
        <%= yield %>
      </div>
    </section>

  <%= javascript_include_tag 'application' %>
</body>
</html>
